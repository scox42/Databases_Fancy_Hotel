  <body>
 	  <!-- Registration Form -->
	  <div class="sectionNoBorder col-md-6">
	  	<h3 class="center">Add Credit Card Info</h3>
		  <form>
			  <div class="form-group">
			    <label for="exampleUsername1">Name on Card</label>
			    <input type="text" class="form-control" id="name" placeholder="Full Name">
			  </div>
			  <div class="form-group">
			    <label for="examplePassword1">Card Number</label>
			    <input type="text" class="form-control" id="cardNum" placeholder="Card Number">
			  </div>
			  <div class="form-group">
			    <label for="examplePassword1">Expiration Date</label>
			    <input type="text" class="form-control" id="01/16" placeholder="Expiration Date">
			  </div>
			  <div class="form-group">
			    <label for="examplePassword1">CVV</label>
			    <input type="text" class="form-control" id="Email1" placeholder="CVV">
			  </div>
			  <button type="submit" class="btn btn-default">Submit</button>
			</form>
		</div>

		<div class="sectionNoBorder col-md-6">
	  	<h3 class="center">Delete Credit Card Info</h3>
		    <form class="margin40">
			  <div class="form-group">
